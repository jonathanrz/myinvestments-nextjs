{
  "plugins": ["react", "jest"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "mocha": true,
    "jest/globals": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "standard"],
  "rules": { "max-len": ["error", 180] }
}
